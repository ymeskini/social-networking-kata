{
  "name": "crafty",
  "version": "0.0.1",
  "description": "Nest.js Monorepo with Clean Architecture",
  "author": "Youssef Meskini",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:api": "nest build api",
    "build:cli": "nest build cli",
    "start:api": "nest start api --watch",
    "start:cli": "nest start cli --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/crafty/main",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --runInBand --config jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "@prisma/client": "^6.7.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "date-fns": "^4.1.0",
    "nest-commander": "^3.17.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@testcontainers/postgresql": "^10.25.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.7",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "nest-commander-testing": "^3.1.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "prisma": {
    "schema": "libs/core/src/infra/prisma/schema.prisma"
  }
}

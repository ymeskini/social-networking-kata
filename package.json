{
  "name": "crafty",
  "version": "0.0.1",
  "description": "Nest.js Monorepo with Clean Architecture",
  "author": "Youssef Meskini",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:api": "nest build api",
    "build:cli": "nest build cli",
    "start:api": "nest start api --watch",
    "start:cli": "nest start cli --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/crafty/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "@prisma/client": "^6.7.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "date-fns": "^4.1.0",
    "nest-commander": "^3.17.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@swc/core": "^1.11.24",
    "@testcontainers/postgresql": "^10.25.0",
    "@types/node": "22.10.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nest-commander-testing": "^3.1.0",
    "prettier": "^2.3.2",
    "prisma": "^6.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^7.1.0",
    "testcontainers": "^10.24.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0",
    "unplugin-swc": "^1.5.2",
    "vitest": "^3.1.2"
  },
  "prisma": {
    "schema": "libs/core/src/infra/prisma/schema.prisma"
  }
}
